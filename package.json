{
  "name": "guns-tool",
  "displayName": "GUNS TOOL",
  "description": "Guns tool ／ 小説用テキスト原稿整形ツール",
  "version": "0.1.92",
  "publisher": "RASEN-WORKS",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/kagurazakarasen/guns-tool"
  },
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "guns-tool.insertSpace",
        "title": "GTool:行頭にスペース挿入"
      },
      {
        "command": "guns-tool.removePunctuation",
        "title": "GTool:カッコ内末尾の句点削除"
      },
      {
        "command": "guns-tool.tateCombiCharacters",
        "title": "GTool:全角！！、！？等を半角横指定に変換"
      },
      {
        "command": "guns-tool.rubyConvertAozoraToBccks",
        "title": "GTool:ルビ変換：青空→BCCKS"
      },
      {
        "command": "guns-tool.rubyConvertBccksToAozora",
        "title": "GTool:ルビ変換2：BCCKS→青空"
      },
      {
        "command": "guns-tool.convertAozoraEmphasisToBccks",
        "title": "GTool:青空文庫形式傍点をBCCKS形式圏点へ変換"
      },
      {
        "command": "guns-tool.convertBccksEmphasisToAozora",
        "title": "GTool:BCCKS形式圏点を青空文庫形式傍点へ変換"
      },
      {
        "command": "guns-tool.fullwidthSingleAlphabet",
        "title": "GTool:アルファベット単独文字を全角に"
      },
      {
        "command": "guns-tool.fullwidthAcronym",
        "title": "GTool:アルファベット略称（3文字以下）を全角に"
      },
      {
        "command": "guns-tool.tateChuyokoTwoDigit",
        "title": "GTool:半角数値（２ケタ）を縦中横に"
      },
      {
        "command": "guns-tool.fixEllipsis",
        "title": "GTool:三点リーダ修正"
      },
      {
        "command": "guns-tool.spaceAfterPunct",
        "title": "GTool:感嘆符後にスペース"
      },
      {
        "command": "guns-tool.fullwidthDigitsToKanji",
        "title": "GTool:全角数字を漢数字に"
      },
      {
        "command": "guns-tool.halfwidthDigitsToFullwidth",
        "title": "GTool:半角数字を全角数字に"
      },
      {
        "command": "guns-tool.dashNormalization",
        "title": "GTool:ダッシュ整形"
      },
      {
        "command": "guns-tool.applyAllFixes",
        "title": "GTool:全修正を一括で行う"
      }
      ,
      {
        "command": "guns-tool.setRubyForSelection",
        "title": "GTool:選択範囲にBCCKSルビを設定"
      },
      {
        "command": "guns-tool.setCirclePointRuby",
        "title": "GTool:選択範囲に圏点ルビ（1文字毎）を設定"
      },
      {
        "command": "guns-tool.addNarouEmphasis",
        "title": "GTool:なろう形式傍点挿入"
      },
      {
        "command": "guns-tool.toUpperCase",
        "title": "GTool:選択範囲を大文字化"
      },
      {
        "command": "guns-tool.halfwidthToFullwidth",
        "title": "GTool:選択範囲内の半角英数字を全角に"
      },
      {
        "command": "guns-tool.showDocumentStatus",
        "title": "GTool:文書ステイタス表示"
      },
      {
        "command": "guns-tool.toggleAlternatingLineBackground",
        "title": "GTool:行毎交互背景色セット／リセット"
      }
    ]
    ,
    "configuration": {
      "title": "GUNS TOOL Configuration",
      "properties": {
        "gunsTool.applyAllFixes.commandOrder": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "guns-tool.insertSpace",
            "guns-tool.removePunctuation",
            "guns-tool.tateCombiCharacters",
            "guns-tool.rubyConvertAozoraToBccks",
            "guns-tool.convertAozoraEmphasisToBccks",
            "guns-tool.fullwidthSingleAlphabet",
            "guns-tool.fullwidthAcronym",
            "guns-tool.tateChuyokoTwoDigit",
            "guns-tool.fixEllipsis",
            "guns-tool.spaceAfterPunct",
            "guns-tool.dashNormalization"
          ],
          "description": "`GTool:全修正を一括で行う` 実行時のコマンド順序（コマンドIDの配列）です。順序を入れ替えることで実行順を変更できます。"
        },
        "gunsTool.applyAllFixes.disabledCommands": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "`GTool:全修正を一括で行う` 実行時にスキップするコマンドのIDの配列です。例えば [\"guns-tool.spaceAfterPunct\"] のように指定します。"
        },
        "gunsTool.alternatingLineBackground.evenLineColor": {
          "type": "string",
          "default": "rgba(255, 255, 200, 0.3)",
          "description": "行毎交互背景色の偶数行（0始まり）の背景色を指定します。CSS形式（rgba, hex等）で指定可能です。"
        },
        "gunsTool.alternatingLineBackground.oddLineColor": {
          "type": "string",
          "default": "rgba(200, 255, 255, 0.3)",
          "description": "行毎交互背景色の奇数行の背景色を指定します。CSS形式（rgba, hex等）で指定可能です。"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.106.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1",
    "mocha": "^11.7.5",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1"
  }
}
