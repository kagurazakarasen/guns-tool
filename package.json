{
  "name": "guns-tool",
  "displayName": "GUNS TOOL",
  "description": "Guns tool in VSCode.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "guns-tool.insertSpace",
        "title": "行頭にスペース挿入"
      },
      {
        "command": "guns-tool.removePunctuation",
        "title": "カッコ内末尾の句点削除"
      },
      {
        "command": "guns-tool.tateCombiCharacters",
        "title": "全角！！、！？等を半角横指定に変換"
      },
      {
        "command": "guns-tool.rubyConvertAozoraToBccks",
        "title": "ルビ変換：青空→BCCKS"
      },
      {
        "command": "guns-tool.rubyConvertBccksToAozora",
        "title": "ルビ変換2：BCCKS→青空"
      },
      {
        "command": "guns-tool.fullwidthSingleAlphabet",
        "title": "アルファベット単独文字を全角に"
      },
      {
        "command": "guns-tool.fullwidthAcronym",
        "title": "アルファベット略称（3文字以下）を全角に"
      },
      {
        "command": "guns-tool.tateChuyokoTwoDigit",
        "title": "半角数値（２ケタ）を縦中横に"
      },
      {
        "command": "guns-tool.fixEllipsis",
        "title": "三点リーダ修正"
      },
      {
        "command": "guns-tool.spaceAfterPunct",
        "title": "感嘆符後にスペース"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.106.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1",
    "mocha": "^11.7.5",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1"
  }
}
